sp {drone*detect*goal2*achieved
   (state <s> ^name drone
              ^robot <r>)
   (<r> ^takeoff 1 
        ^forward < 30
        ^up 1
        ^notable 1)
-->
   (write (crlf) |The problem has been solved.|)
   (halt)}

sp {drone*propose*goal2*achieved
   (state <s> ^name drone
              ^robot <r>)
   (<r> ^takeoff 1
        ^forward < 30
        ^up 1
        ^notable 1)
-->
   (<s> ^operator <op> + =)
   (<op> ^name goal2-achieved)
}

sp {drone*apply*goal2*achieved
   (state <s> ^operator <op>
              ^desired <d>
              ^io.output-link <out>)
   (<op> ^name goal2-achieved)
-->
   (<out> ^achieved2.true 1)
   (write (crlf) |no table under me|)
   (interrupt)
}